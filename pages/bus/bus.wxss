.page {
  background-color: #dcdfe2;
}

.album {
  text-align: center;
}

.album .item {
  position: relative;
  margin-bottom: 0px;
  text-align: center;
}

.album .item:last-child .item-bd {
  display: none;
}

.title {
  color: #7d7d7f;
  font-size: 14px;
  margin-top: 8px;
  letter-spacing: 0.5px;
}

.url {
  position: relative;
  z-index: 10;
  display: inline-block;
  padding: 3px;
  background-color: #fff;
  box-shadow: 0 0 2px 1px rgba(0, 0, 0, 0.1);
  transform: rotate(0deg);
}

.url::before {
  display: none;
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
  width: 206px;
  height: 146px;
  background-color: #fff;
  box-shadow: 0 0 2px 1px rgba(0, 0, 0, 0.1), 0 0 2px 1px inset rgba(0, 0, 0, 0.1);
  transform: rotate(3deg);
}

.url image {
  width: 400rpx;
  height: 280rpx;
}

.item-bd {
  align-items: center;
  justify-content: center;
  padding: 0 10px;
}

.line {
  flex: 1;
  height: 1px;
  border-top: 1px solid #a5a7a9;
  background-color: #fff;
}

.figure {
  width: 12px;
  height: 20px;
  margin: 0 5px;
  border: 2px solid #cdcfd1;
  background-color: #dcdfe2;
}
